@model proj2_twai.Models.Stanowisko
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edycja</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <style>
        .btn a {
            color: white;
            text-decoration: none
        }

        body {
            background-color: #F1F1F1;
        }
    </style>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Edytuj</h4></div>
        @Html.ValidationSummary()
        <div class="panel-body">
            <form action="/List/SEdit" method="post">
                <div class="validation-summary-valid" data-valmsg-summary="true">
                    <ul>
                        <li style="display:none"></li>
                    </ul>
                </div>            <div class="form-group">
                    <label>Nazwa:</label>
                    <input class="form-control" data-val="true" required data-val-required="Proszę podać nazwe" id="IMIE" value="@Model.NAZWA" name="NAZWA" type="text" value="" />
                </div>
                <div class="form-group">
                    <label>Skrócona:</label>
                    <input class="form-control" data-val="true" required data-val-required="Proszę podać skrocona nazwe." value="@Model.SHORT" id="NAZWISKO" name="SHORT" type="text" value="" />
                </div>
                
                <button type="submit" class="btn btn-primary">Edytuj</button>
            </form>
        </div>
    </div>

    <div class="btn btn-danger">
        <a href="/">Powr&#243;t</a>
    </div>
</body>
</html>
