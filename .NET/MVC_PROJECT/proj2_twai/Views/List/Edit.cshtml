@model proj2_twai.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edycja</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <style>
        .btn a {
            color: white;
            text-decoration: none
        }

        body {
            background-color: #F1F1F1;
        }
    </style>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Edytuj</h4></div>
        @Html.ValidationSummary()
        <div class="panel-body">
            <form action="/List/Edit" method="post">
                <div class="validation-summary-valid" data-valmsg-summary="true">
                    <ul>
                        <li style="display:none"></li>
                    </ul>
                </div>            <div class="form-group">
                    <label>Imię:</label>
                    <input class="form-control" data-val="true" required data-val-required="Proszę podać swoje imię" id="IMIE" value="@Model.IMIE" name="IMIE" type="text" value="" />
                </div>
                <div class="form-group">
                    <label>Nazwisko:</label>
                    <input class="form-control" data-val="true" required data-val-required="Proszę podać swoje nazwisko." value="@Model.NAZWISKO" id="NAZWISKO" name="NAZWISKO" type="text" value="" />
                </div>
                <div class="form-group">
                    <label>Wiek:</label>
                    <input value="@Model.WIEK "class="form-control" required data-val="true" data-val-number="Pole WIEK musi być liczbą." data-val-range="Wiek nie może być wartością ujemna" data-val-range-max="200" data-val-range-min="0" data-val-required="Proszę podać wiek." id="WIEK" name="WIEK" type="text" value="" />
                </div>
                <button type="submit" class="btn btn-primary">Edytuj</button>
            </form>
        </div>
    </div>

    <div class="btn btn-danger">
        <a href="/">Powr&#243;t</a>
    </div>
</body>
</html>
